{% extends "layout.twig" %}

{% block nav %}
    <header>
        <nav>
            <a href="{{ 'employed/home' | url }}"><img src="{{ ''| url }}img/logo.png" class="logo" alt="logo de la pagina" width="100" height=100"></a>
            <div class="title"><h2 >Gestion de Personal</h2></div>

            <ul class="nav navbar-nav ">
                <li class="conf"><a href="" ><img src="{{ ''| url }}img/iconoConfiguracion.png" height="75" width="75"
                                                 alt="configuracion"></a></li>
                <li class="atras"><a href="{{ 'employed/home' | url }}"><img src="{{ ''| url }}img/iconoBack.png"
                                                                             alt="atras" height="75" width="75"></a></li>
            </ul>
        </nav>
    </header>
{% endblock %}
{% block content %}

    <div class="container">

        <h1>{{ info.subtitle }}</h1>
        <form method="post">
            <div class="col-md-4">
                <h3>Personal Data</h3>
                <div class="form-group ">
                    <label for="inputName">Name</label>
                    <input type="text" id="inputName" class="form-control {% if errors['name'] %} has-error {% endif %}"
                           name="employedName" placeholder="User Name"
                           value={{ employed.name }}>
                </div>
                <div class="form-group ">
                    <label for="inputSurnames">Surnames</label>
                    <input type="text" id="inputSurnames"
                           class=" form-control {% if errors['surnames'] %} has-error {% endif %}"
                           name="employedSurnames"
                           placeholder="User Surnames"
                           value={{ employed.surnames }}>
                </div>
                <div class="form-group ">
                    <label for="inputLatestStudies">Latest Studies</label>
                    <input type="text" id="inputLatestStudies" class="form-control" name="employedLastedStudies"
                           placeholder="User Latest Studies" value={{ employed.lasted_studies }}>
                </div>
                <div class="form-group ">
                    <label for="inputLatestJob">Latest Job</label>
                    <input type="text" id="inputLatestJob" class="form-control" name="employedLatestJob"
                           placeholder="User Latest Job" value={{ employed.lasted_job }}>
                </div>

            </div>
            <div class="col-md-4">
                <h3>Contact Data</h3>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" id="inputAddress"
                           class=" form-control {% if errors['address'] %} has-error {% endif %}"
                           name="employedAddress"
                           placeholder="User Address"
                           value={{ employed.address }}>
                </div>
                <div class="form-group ">
                    <label for="inputPostcode">Postcode</label>
                    <input type="text" id="inputPostcode"
                           class="form-control {% if errors['postcode'] %} has-error {% endif %}"
                           name="employedPostcode"
                           placeholder="User Postcode"
                           value={{ employed.postcode }}>
                </div>
                <div class="form-group  ">
                    <label for="inputEmail">Email</label>
                    <input type="email" id="inputEmail" name="employedEmail"
                           class="form-control {% if  errors['email'] %}has-error{% endif %}" placeholder="User Email"
                           value={{ employed.email }}>
                </div>
                <div class="form-group">
                    <label for="inputMovil">movil</label>
                    <input type="number" class=" form-control {% if errors['movil'] %} has-error {% endif %}"
                           id="inputMovil"
                           name="employedMovil" placeholder="User movil"
                           value={{ employed.movil }}>
                </div>
            </div>

            <div class="col-md-4">
                <h3>Employed Data</h3>
                <div class="form-group">
                    <label for="inputImage">Image</label>
                    <input type="text" id="inputImage" class="form-control" name="employedImage"
                           placeholder="User Image URL"
                           value={{ employed.image }}>
                </div>
                <div class="form-group ">
                    <label for="inputJobPosition">Job Position</label>
                    <input type="text" class="form-control {% if errors['job_position'] %} has-error {% endif %}"
                           id="inputJobPosition" name="employedJobPosition"
                           placeholder="User Job Position" value={{ employed.job_position }}>
                </div>
                <div class="form-group {% if errors['departament'] %} has-error {% endif %}">
                    <label for="inputDepartament">Departament</label>

                    <select name="employedDepartament" id="inputDepartament">
                        <option value="option" selected>Selet</option>
                        <option value="stewardship">
                            Stewardship
                        </option>
                        <option value="marketing">
                            Marketing
                        </option>
                        <option value="accounting">
                            Accounting
                        </option>
                        <option value="Human Resources">
                            Human Resources
                        </option>
                    </select>
                </div>
                <div class="form-group {% if errors['time'] %}has-error {% endif %}">
                    <label for="inputTime">Time</label>
                    <select name="employedTime" id="inputTime">
                        <option value="option" selected>Turn</option>
                        <option value="tarde">Tarde</option>
                        <option value="mañana">Mañana</option>
                    </select>
                </div>
            </div>
            <input type="hidden" name="_method" value="{{ info.method }}">
            <button class="btn btn-primary pull-right" type="submit">{{ info.submit }}</button>
        </form>
    </div>
{% endblock %}