{% extends 'layout.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ ''| url }}css/app.css">
{% endblock %}

{% block nav %}
    <header>
        <nav>
            <a href="{{ 'user/home' | url }}"><img src="{{ ''| url }}img/logo.png" class="logo" alt="logo de la pagina" width="100"
                                                   height=100"></a>
            <div class="title"><h2 >Gestion de Personal</h2></div>

            <ul class="nav navbar-nav ">
                <li class="atras"><a href="{{ 'user/home' | url }}"><img src="{{ ''| url }}img/iconoBack.png"
                                                                                alt="atras" width="75" height="75"></a></li>
            </ul>
        </nav>
    </header>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <img src="{{ '' | url }}img/404-error.jpg" alt="pagina no encontrada 404" width="775" height="375">
                <div class="error-details">
                    <h3>
                    {{ info.error }}
                    </h3>
                </div>
                <div class="error-actions">
                    <a href="{{ info.url | url}}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        {{ info.submitRedirect }} </a><a href="#" class="btn btn-default btn-lg pull-right"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
                <br>
            </div>
        </div>
    </div>
{% endblock %}